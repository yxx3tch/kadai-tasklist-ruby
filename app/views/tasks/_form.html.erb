<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, '状態' %>
  <%=f.select :status, [['未着手','未着手'],['実行中','実行中'],['完了済','完了済']] %>

  <%= f.submit '送信' %>
<% end %>