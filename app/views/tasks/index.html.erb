<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>状態</th>
        <th>タスク内容</th>
      </tr>
    </thead>
    <tbody>
     <% @tasks.each do |task| %>
       <tr>
         <td><%= link_to task.id, task %></td>
         <td><%= task.status %></td>
         <td><%= task.content %></td>
       </tr>
     <% end %>
   </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>